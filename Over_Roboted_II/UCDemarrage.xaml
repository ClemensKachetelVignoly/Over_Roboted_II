<UserControl x:Class="Over_Roboted_II.UCDemarrage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Over_Roboted_II"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1280">
    <Canvas>
        <Canvas.Background>
            <ImageBrush ImageSource="/Images/backgroundAccueil.jpg"/>
        </Canvas.Background>


        <Grid Height="720" Width="1280" >
            <Image Height="258"  Source="/Images/carreGris.png" Stretch="Fill"  Width="332" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,462,0,0"/>
            <Button x:Name="butRegles" Content="Règles"  Width="235" Height="54" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,-400" Click="butRegles_Click"/>
            <Button x:Name="butDemarrer" Content="Démarrer"  Width="235" Height="54" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,-280" Click="butDemarrer_Click"/>
            <Button x:Name="butParametres" Content="Paramètres"  Width="235" Height="54" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,-520" Click="butParametres_Click"/>
            <Button x:Name="butQuitterJeu" Content="Quitter le jeu"  HorizontalAlignment="Center" VerticalAlignment="Center" Width="235" Height="54" Margin="0,0,0,-640" Click="butQuitterJeu_Click" />
            
        </Grid>

    </Canvas>




</UserControl>
