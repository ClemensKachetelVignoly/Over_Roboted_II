<UserControl x:Name="UserControlGame" x:Class="Over_Roboted_II.UCGame"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Over_Roboted_II"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1280" Loaded="UserControl_Loaded">

    <Grid>
        <StackPanel x:Name="ResourcesPanel" Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"/>
        <Canvas x:Name="GameCanvas" Width="1280" Height="720" Panel.ZIndex="-1">
            <Canvas.LayoutTransform>
                <ScaleTransform x:Name="GameScale"/>
            </Canvas.LayoutTransform>
            <Canvas.Background>
                <ImageBrush ImageSource="pack://application:,,,/Images/backgroudJeu.png"/>
            </Canvas.Background>
            <Image x:Name="Player" Source="Images/Miku/devant1.png" Width="80" Height="80" Canvas.Left="0" Canvas.Top="0" RenderOptions.BitmapScalingMode="NearestNeighbor" Stretch="Fill"/>
        </Canvas>
        <Grid x:Name="Popup" Visibility="Collapsed">
            <Border Background="Black"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="900"
                Height="500"
                CornerRadius="10">
                <TextBlock Text="CRAFTING TABLE"
                   Foreground="White"
                   FontSize="32"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"/>
            </Border>
            <Border Background="White"
                    Height="400"
                    Width="550" HorizontalAlignment="Left" Margin="240,0,0,0"/>
            <Border Background="White"
                    Height="400"
                    Width="200" HorizontalAlignment="Left" Margin="840,160,0,160"/>
        </Grid>


    </Grid>
</UserControl>
