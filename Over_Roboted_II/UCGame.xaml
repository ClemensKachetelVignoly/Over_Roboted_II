<UserControl x:Name="UserControlGame" x:Class="Over_Roboted_II.UCGame"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Over_Roboted_II"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1280" Loaded="UserControl_Loaded">
    <Grid>
        <Canvas x:Name="GameCanvas" Width="1280" Height="720">
            <Canvas.LayoutTransform>
                <ScaleTransform x:Name="GameScale"/>
            </Canvas.LayoutTransform>

            <Image x:Name="Player"
       Width="80" Height="80"
       Canvas.Left="0" Canvas.Top="0"
       RenderOptions.BitmapScalingMode="NearestNeighbor"
       Stretch="Fill"/>
        </Canvas>
    </Grid>
</UserControl>
