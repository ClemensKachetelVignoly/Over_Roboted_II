<UserControl x:Name="UserControlGame" x:Class="Over_Roboted_II.UCGame"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Over_Roboted_II"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1280" Loaded="UserControl_Loaded">

    <Grid>
        <StackPanel x:Name="ResourcesPanel" Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"/>
        <Canvas x:Name="GameCanvas" Width="1280" Height="720" Panel.ZIndex="-1">
            <Canvas.LayoutTransform>
                <ScaleTransform x:Name="GameScale"/>
            </Canvas.LayoutTransform>
            <Canvas.Background>
                <ImageBrush ImageSource="pack://application:,,,/Images/backgroudJeu.png"/>
            </Canvas.Background>
            <Image x:Name="Player" Source="Images/Miku/devant1.png" Width="80" Height="80" Canvas.Left="0" Canvas.Top="0" RenderOptions.BitmapScalingMode="NearestNeighbor" Stretch="Fill"/>
        </Canvas>
        <Grid x:Name="Popup" Visibility="Visible">
            <Border Background="Black"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="900"
                Height="500"
                CornerRadius="10" RenderTransformOrigin="0.472,0.503">
                <TextBlock Text="CRAFTING TABLE"
                   Foreground="White"
                   FontSize="32"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"/>
            </Border>
            <Border Background="White"
                    Height="400"
                    Width="550" HorizontalAlignment="Center" Margin="0,0,240,0">
                
            </Border>
            <Border Background="White"
                    Height="400"
                    Width="200" HorizontalAlignment="Center" Margin="600,160,0,160"/>
            <Button x:Name="butImg1" Height="200" Width="200" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,553,200" BorderBrush="{x:Null}" Click="butImg1_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <ContentPresenter/>
                    </ControlTemplate>
                </Button.Template>
                <Image x:Name="img1" Source="/Images/Robot/corps1.png"/>
            </Button>
            <Button x:Name="butImg2" Height="200" Width="200" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,200" BorderBrush="{x:Null}">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <ContentPresenter/>
                    </ControlTemplate>
                </Button.Template>
                <Image x:Name="img2" Source="/Images/Robot/corps2.png"/>
            </Button>
            <Button x:Name="butImg3" Height="200" Width="200" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,200,553,0" BorderBrush="{x:Null}">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <ContentPresenter/>
                    </ControlTemplate>
                </Button.Template>
                <Image x:Name="img3" Source="/Images/Robot/corps3.png"/>
            </Button>
        </Grid>


    </Grid>
</UserControl>
