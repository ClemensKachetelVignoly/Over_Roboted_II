             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Over_Roboted_II"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1080">
    <Grid>
        <Label Content="Paramètres" HorizontalAlignment="Center" Margin="0,80,0,0" VerticalAlignment="Top" FontSize="36"/>
        <Button x:Name="butExit" Content="Quitter" HorizontalAlignment="Center" Margin="0,0,0,30" VerticalAlignment="Bottom" Height="44" Width="400" Click="butExit_Click"/>
